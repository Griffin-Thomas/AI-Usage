{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AI Pulse",
  "version": "0.5.1",
  "identifier": "com.aipulse.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "AI Pulse",
        "label": "main",
        "width": 500,
        "height": 800,
        "minWidth": 420,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app", "nsis", "appimage"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDk4QTE4NzQ2QTIxNTFFODkKUldTSkhoV2lSb2VobUNMZmNhaEpVTG41dDUyamNrL1JyU3E2UXFrUUNlcFJDOHNmWmdIWFFUdWwK",
      "endpoints": [
        "https://github.com/Griffin-Thomas/AI-Pulse/releases/latest/download/latest.json"
      ] 
    }
  }
}
